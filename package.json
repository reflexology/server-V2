    "@types/eslint": "^6.1.9",
    "@types/express": "4.17.4",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/moment": "^2.13.0",
